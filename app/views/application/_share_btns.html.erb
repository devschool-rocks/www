<div id="share_panel">
<ul class="list-unstyled">
    <!-- Email -->
    <li><a rel=nofollow href="mailto:?Subject=Check out this online web developer school I found!&amp;Body=<%= request.url %>">
    <i class="site-sprite sprite-email"></i>
    </a></li>
 
    <!-- Twitter -->
    <li><a rel=nofollow href="https://twitter.com/share?url=<%= request.url %>" target="_blank">
    <i class="site-sprite sprite-twitter"></i>
    </a></li>
    
    <!-- Facebook -->
    <li><a rel=nofollow href="http://www.facebook.com/sharer.php?u=<%= request.url %>" target="_blank">
    <i class="site-sprite sprite-facebook"></i>
    </a></li>
    
    <!-- LinkedIn -->
    <li><a rel=nofollow href="http://www.linkedin.com/shareArticle?mini=true&amp;url=<%= request.url %>" target="_blank">
    <i class="site-sprite sprite-linkedin"></i>
    </a></li>
    
    <!-- Reddit -->
    <li><a rel=nofollow href="http://reddit.com/submit?url=<%= request.url %>" target="_blank">
    <i class="site-sprite sprite-reddit"></i>
    </a></li>
</ul>
</div>
