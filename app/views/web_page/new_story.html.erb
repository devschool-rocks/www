    <img src="<%= asset_path("banner_ngo.jpg") %>" width="100%" 
          class="center-block box">
    <div class="container">
      <div class="carousel-content-panel text-center">
        <h1>
          <div class="top">NewStory Charity</div>
          <div class="middle">helps fund life-saving homes</div>
          <div class="bottom">and Devschool get's to help them do it with our student to internship program!</div>
        </h1>
      </div>
    </div>
    <span id="learn-more"></span>
  </div>
<%- end %>

